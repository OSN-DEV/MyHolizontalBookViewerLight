<Window x:Class="MyHolizontalBookViewerLight.ExtractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHolizontalBookViewerLight"
        mc:Ignorable="d"
        Title="Unzip" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" WindowStyle="None" ShowInTaskbar="False">
    <StackPanel Margin="10"
            Orientation="Horizontal">
        <Grid>
            <ProgressBar x:Name="cProgress"
                 Height="30"
                 Width="180"
                 Minimum="0"
                 Maximum="100"
                 HorizontalAlignment="Left"
                 ValueChanged="ProgressBar_ValueChanged"
                 />
            <TextBlock x:Name="cProgressText"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
                TextAlignment="Center"
               Text="xxx"
               Width="180"/>
        </Grid>


    </StackPanel>
</Window>
